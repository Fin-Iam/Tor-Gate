{
  "name": "Flarum Security Gateway",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "flarum",
  "workspaceFolder": "/var/www/flarum",
  "forwardPorts": [
    8080,
    8081,
    3306,
    6379
  ],
  "portsAttributes": {
    "8080": {
      "label": "Flarum Forum",
      "onAutoForward": "openPreview"
    },
    "8081": {
      "label": "phpMyAdmin",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MariaDB"
    },
    "6379": {
      "label": "Redis"
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "bash .devcontainer/start-services.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-typescript-next",
        "streetsidesoftware.code-spell-checker",
        "redhat.vscode-yaml",
        "github.vscode-github-actions"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay",
        "php.validate.executablePath": "/usr/bin/php"
      }
    }
  },
  "containerEnv": {
    "FLARUM_DEBUG": "true",
    "DB_HOST": "mariadb",
    "DB_USERNAME": "flarum",
    "DB_PASSWORD": "flarum_secret_password"
  },
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/data,target=/var/lib/mysql,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/logs,target=/var/log,type=bind"
  ]
}
